{
    "name": "seb/nimiq-payment-validator",
    "description": "A PHP library to interact with Nimiq cryptocurrency, focusing on transaction validation.",
    "type": "library",
    "version": "1.0.0",
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.1",
        "monolog/monolog": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "psr/http-client": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Seb\\NimiqLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Seb\\NimiqLib\\": "tests/"
        }
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true
}
